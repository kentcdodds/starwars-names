{
  "name": "mybooks-names",
  "version": "1.0.0",
  "description": "Get random book names",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "watch:test": "mocha --watch",
    "lint": "eslint src",
    "validate": "npm-run-all --parallel test lint build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nontivillu/mybooks-names.git"
  },
  "keywords": [
    "random",
    "star wars"
  ],
  "files": [
    "dist"
  ],
  "author": "Nisha Prabhakaran <nisha.prabhakaran@hotmail.com> ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nontivillu/mybooks-names/issues"
  },
  "homepage": "https://github.com/nontivillu/mybooks-names#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.11.4",
    "babel-plugin-istanbul": "1.0.3",
    "babel-preset-es2015": "6.9.0",
    "babel-register": "6.11.6",
    "chai": "3.5.0",
    "cross-env": "2.0.0",
    "eslint": "3.2.0",
    "eslint-config-kentcdodds": "^9.0.0",
    "ghooks": "1.3.2",
    "mocha": "3.0.0",
    "npm-run-all": "2.3.0",
    "nyc": "7.1.0",
    "rimraf": "2.5.4"
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 100,
    "function": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ],
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  }
}
